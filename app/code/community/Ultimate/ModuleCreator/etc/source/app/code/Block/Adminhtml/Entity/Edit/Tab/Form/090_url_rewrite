        $fieldset->addField('url_key', 'text', array(
            'label' => Mage::helper('{{namespace}}_{{module}}')->__('Url key'),
            'name'  => 'url_key',
            'required'  => true,
            'class' => 'required-entry',
            'note'    => Mage::helper('{{namespace}}_{{module}}')->__('Relative to Website Base URL')
        ));
